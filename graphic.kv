#:import ClickArea gui_elements
#:import ScrollView kivy.uix.scrollview
#:import Window kivy.core.window.Window

<Widget>:
    font_name: "fonts/font.ttf"
    font_size: Window.height * 1 / 16

<Player>:
    player_img: player_img
    weapon_img: weapon

    allow_stretch: False
    size_hint: .3, .3
    pos_hint: {'center_x': .35, 'center_y': .5}

    Image:
        id: player_img
        pos_hint: {'center_x': .5, 'center_y': .5}

    Image:
        id: weapon
        pos_hint: {'center_x': .85, 'center_y': .55}
        size_hint_y: .45

        canvas.before:
            PushMatrix
            Rotate:
                angle: root.angle
                axis: 0, 0, 1
                origin: self.center

        canvas.after:
            PopMatrix

<Monster>:
    pos_hint: {'center_x': .65, 'center_y': .5}
    allow_stretch: True
    size_hint_y: .15

<Upgrade>:
    name_label: name_label
    buy_label: buy_label
    info_layout: info_layout
    img: img
    info_label: info_label

    size_hint_y: None
    height: Window.height * 0.21
    markup: True
    font_size: Window.height * 1 / 48
    background_normal: "img/upgrade_background.png"
    background_down: "img/upgrade_background.png"

    GridLayout:
        pos: root.pos
        size: root.size
        cols: 1
        size_hint_y: None

        Label:
            id: name_label
            font_size: Window.height * 1 / 50

        GridLayout:
            id: info_layout
            cols: 2

            Image:
                id: img
                size_hint_y: .5

            GridLayout:
                cols: 1

                MoneyLabel:
                    id: buy_label
                    halign: "center"
                    font_size: Window.height * 1 / 40

                Label:
                    id: info_label
                    halign: "center"
                    font_size: Window.height * 1 / 40

<ExitButton@Button>:
    border: (0,0,0,0)
    pos_hint: {'top': 1, 'right': 1}
    background_normal: "img/icons/x_ico.png"
    background_down: "img/icons/x_ico_down.png"
    size_hint: (None, None)
    size: (Window.height * 1 / 12, Window.height * 1 / 12)

    on_press: self.parent.parent.close_window()

    canvas.before:
        PushMatrix
        Rotate:
            angle: 45
            origin: self.center

    canvas.after:
        PopMatrix

<PopupWindow>:
    size_hint: (.8, .9)
    pos_hint: {'center_x': .5, 'center_y': .5}

    Image:
        source: "img/window_background.png"
        allow_stretch: True
        size: self.size
        pos_hint: self.parent.pos_hint

    ExitButton:
        id: exit_btn

<ShopContent>:
    scrolling_area: scrolling_area

    pos_hint: {'center_x': .5}
    size_hint: (.85, .6)

    GridLayout:
        id: scrolling_area
        cols: 1
        spacing: 15
        size_hint_y: None
        height: self.minimum_height

<ShopWindow>:
    header: header
    window_scheme: scheme

    BoxLayout:
        id: scheme
        size_hint: (.9, .9)
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation: 'vertical'

        Label:
            id: header
            font_size: Window.height * 1 / 16
            pos_hint: {'center_x': .5}
            size_hint: (1, .1)

<ArenaWindow>:
    header: header
    arena_img: arena_img
    buy_btn: buy
    previous_btn: previous
    next_btn: next
    window_scheme: scheme
    info_label: info_label

    FloatLayout:
        id: scheme
        size_hint: (.9, .9)
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation: 'vertical'

        Label:
            id: header
            font_size: Window.height * 1 / 16
            pos_hint: {'center_x': .5, 'center_y': .95}
            size_hint: (1, .1)

        Image:
            id: arena_img
            pos_hint: {'center_x': .5, 'center_y': .6}
            size_hint_y: .4

        BoxLayout:
            size_hint: (None, .15)
            pos_hint: {'center_x': .5, 'center_y': .3}
            orientation: 'vertical'

            Label:
                id: info_label
                font_size: Window.height * 1 / 28


        GridLayout:
            cols: 3
            size_hint: (.9, None)
            pos_hint: {'center_x': .5, 'center_y': .1}

            Button:
                id: previous
                font_size: Window.height * 1 / 48
                text: "Previous"
                background_down: "img/upgrade_background.png"
                background_normal: "img/upgrade_background.png"

                on_press: root.change_arena(-1)

            Button:
                id: buy
                font_size: Window.height * 1 / 48
                background_down: "img/upgrade_background.png"
                background_normal: "img/upgrade_background.png"

                on_press: root.on_set_click()

            Button:
                id: next
                font_size: Window.height * 1 / 48
                text: "Next"
                background_down: "img/upgrade_background.png"
                background_normal: "img/upgrade_background.png"

                on_press: root.change_arena(1)

<CardButton@Button>:
    background_normal: "img/upgrade_background.png"
    background_down: "img/upgrade_background.png"
    font_size: Window.height * 1 / 60
    size_hint_y: .6

<WorkshopInfoCard@BoxLayout>:
    img: img
    card_header: card_header
    info_label: info_label
    btn1: btn1
    btn2: btn2

    orientation: 'vertical'
    size_hint_y: .5

    Label:
        id: card_header
        font_size: Window.height * 1 / 20

    BoxLayout:
        id: weapon_info
        orientation: 'horizontal'

        Image:
            id: img

        BoxLayout:
            orientation: 'vertical'

            Label:
                id: info_label
                font_size: Window.height * 1 / 40

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5

                CardButton:
                    id: btn1

                CardButton:
                    id: btn2

<WorkshopWindow>:
    costume_card: costume_card
    weapon_card: weapon_card

    FloatLayout:
        id: scheme
        size_hint: (.9, .9)
        pos_hint: {'center_x': .5, 'center_y': .5}

        Label:
            pos_hint: {'center_x': .5, 'center_y': .95}
            size_hint: (1, .1)

            font_size: Window.height * 1 / 16
            text: "Workshop"

        BoxLayout:
            size_hint: (.9, .9)
            pos_hint: {'center_x': .5, 'center_y': .5}
            orientation: 'vertical'
            spacing: 20

            WorkshopInfoCard:
                id: costume_card

            WorkshopInfoCard:
                id: weapon_card

<MenuButton>:
    size_hint: (.2, None)
    height: self.width

<GameManager>:
    menu: menu
    background: background
    arena_btn: arena_btn

    FloatLayout:
        Image:
            id: background
            allow_stretch: True
            size_hint: (1, 1)

        MoneyLabel:
            id: money_counter
            pos_hint: {'y': .45, 'center_x': .5}
            font_size: Window.height * 1 / 16
            text: self.set_text(root.money)

        GridLayout:
            id: menu
            cols: 4
            size_hint_y: None
            height: Window.height * 0.1
            pos_hint: {'center_x': 0.5}
            spacing: self.width * 2/40

            MenuButton:
                on_press: root.open_window(0)
                source: "img/icons/weapon_ico.png"

            MenuButton:
                on_press: root.open_window(1)
                source: "img/icons/armor_ico.png"

            MenuButton:
                on_press: root.open_window(2)
                source: "img/icons/mixture_ico.png"

            MenuButton:
                on_press: root.open_window(3)
                source: "img/icons/costume_ico.png"

        MenuButton:
            id: arena_btn
            pos_hint: {'top': 1, 'x': 0}
            on_press: root.open_window(4)
            source: "img/icons/arena_ico.png"

        MenuButton:
            id: workshop_btn
            pos_hint: {'top': 1, 'right': 1}
            on_press: root.open_window(5)
            source: "img/icons/workshop_ico.png"


